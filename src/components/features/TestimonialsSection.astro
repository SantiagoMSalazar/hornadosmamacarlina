<style>
  .testimonials-section {
    padding: var(--spacing-xl) 0;
    background: var(--color-beige);
    position: relative;
  }
  
  .testimonials-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: center;
    margin-bottom: var(--spacing-xl);
  }
  
  .testimonial-card {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: 20px;
    box-shadow: var(--shadow-medium);
    animation: fadeInUp 0.8s ease-out;
  }
  
  .testimonial-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }
  
  .testimonial-image img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border: 4px solid var(--color-yellow);
  }
  
  .testimonial-info h4 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }
  
  .testimonial-location {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }
  
  .testimonial-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--color-text);
    font-style: italic;
    margin-bottom: var(--spacing-md);
    position: relative;
    padding-left: var(--spacing-md);
  }
  
  .testimonial-text::before {
    content: '"';
    position: absolute;
    left: 0;
    top: -10px;
    font-size: 3rem;
    color: var(--color-yellow);
    font-family: serif;
    line-height: 1;
  }
  
  .testimonial-reactions {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }
  
  .reaction {
    font-size: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    filter: grayscale(0.3);
  }
  
  .reaction:hover {
    transform: scale(1.2);
    filter: grayscale(0);
  }
  
  .testimonials-images {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }
  
  .testimonial-image-container {
    position: relative;
    width: 100%;
    max-width: 400px;
    height: 350px;
  }
  
  .background-shape {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 250px;
    height: 250px;
    background: var(--color-yellow);
    border-radius: 40% 60% 50% 30%;
    opacity: 0.7;
    animation: pulse 4s ease-in-out infinite;
  }
  
  .testimonial-main-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: var(--shadow-medium);
    border: 6px solid var(--color-white);
    z-index: 2;
  }
  
  .decorative-bottle {
    position: absolute;
    bottom: 30px;
    right: 30px;
    z-index: 3;
  }
  
  .bottle {
    font-size: 2.5rem;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3));
    animation: float 3s ease-in-out infinite;
  }
  
  .section-header {
    text-align: center;
  }
  
  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-text);
    position: relative;
  }
  
  .highlight {
    color: var(--color-yellow);
  }
  
  /* Animaciones */
  @keyframes pulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.7;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.05);
      opacity: 0.5;
    }
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .testimonials-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .testimonials-images {
      order: -1;
    }
    
    .testimonial-image-container {
      height: 250px;
    }
    
    .background-shape {
      width: 180px;
      height: 180px;
    }
    
    .testimonial-main-image {
      width: 140px;
      height: 140px;
    }
    
    .bottle {
      font-size: 2rem;
    }
    
    .testimonial-card {
      padding: var(--spacing-md);
    }
    
    .testimonial-header {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-sm);
    }
    
    .testimonial-text {
      padding-left: 0;
      text-align: center;
    }
    
    .testimonial-text::before {
      display: none;
    }
    
    .testimonial-reactions {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .testimonial-image img {
      width: 60px;
      height: 60px;
    }
    
    .testimonial-text {
      font-size: 1rem;
    }
    
    .reaction {
      font-size: 1.2rem;
    }
  }
</style>
